@page
@model DemoApp.PageModels.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
<html>
    <head>
        <title>DemoApp</title>
    </head>
    <body>
        <h1>Hello Customer @User.Identity.Name</h1>
        <h3>Your Orders</h3>
        <table border="1">
            <tr>
                <th>Product No</th>
                <th>Quantity</th>
                <th>Order Date</th>
            </tr>
            @foreach(var entry in Model.Output.Orders)
            {
                <tr>
                    <td>@entry.ProductId</td>
                    <td>@entry.Quantity</td>
                    <td>@entry.OrderDate</td>
                </tr>
            }
        </table>
        <p>
            <a asp-page-handler="logout">Logout</a>
        </p>
    </body>
</html>
